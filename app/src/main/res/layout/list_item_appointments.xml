<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_appointment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#79CDCD"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="John Legend"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/list_item_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:text="28/04/2018"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/list_item_appointment_name"
            android:layout_marginLeft="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@id/list_item_appointment_date">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_location_on_grey_24dp"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/list_item_appointment_location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="San Jose, California. United States"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textStyle="bold|italic"/>

        </LinearLayout>

            <TextView
                android:id="@+id/list_item_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="03:24 AM"
                android:textStyle="bold"
                android:textColor="#E5000000"
                android:fontFamily="@font/miss_smarty_pants"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/state_pressed"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>