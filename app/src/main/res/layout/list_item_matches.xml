<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/home_match_card_cover_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:src="@drawable/default_profile_image" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@android:color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/watermelon_font"
                        android:paddingTop="4dp"
                        android:text="Friends"
                        android:textColor="#FF5050"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/home_match_card_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="Playing Cards, Sharing Stories, Cooking!"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_margin="3dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_match_card_profile_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_match_card_circular_pic_cardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/home_match_card_circular_profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_profile_image"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/home_match_card_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/home_match_card_circular_pic_cardView"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Aditya Kumar"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_match_card_profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_match_card_profile_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/home_match_card_circular_pic_cardView"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="19 years"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on_grey_24dp"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/home_match_card_profile_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Kattankulathur, Chennai"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/home_match_card_comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_match_comment_display_picture_container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/home_match_comment_display_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dwayne_the_rock_sample_profile_pic" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_match_card_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/home_match_comment_display_picture_container"
                android:background="#64696969"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/home_match_comment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="4dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Dwayne The Rock"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="6dp"
                        android:layout_toEndOf="@id/home_match_comment_name"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="Really awesome companionship! "
                        android:textSize="12sp"
                        android:fontFamily="sans-serif" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
