<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/create_account_otp_verification_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/black"/>


    <LinearLayout
        android:id="@+id/create_account_otp_verification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"
            android:text="Enter OTP"
            android:layout_margin="5dp" />

        <EditText
            android:id="@+id/create_account_otp_verification_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword" />

        <TextView
            android:id="@+id/create_account_otp_verification_resend_otp_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textColor="#696969"
            android:textSize="12sp"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/create_account_error_otp_verification_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incorrect OTP. Please try again"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_cardView_container"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#dce53256"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/create_account_otp_verification_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:text="Verify"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/miss_smarty_pants"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>