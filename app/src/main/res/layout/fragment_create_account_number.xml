<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/create_account_number_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's your Number?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/create_account_error_number_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please a valid number"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/create_account_number_description"
        android:layout_width="wrap_content"
        android:maxWidth="250dp"
        android:layout_height="wrap_content"
        android:text="Enter your number we will send you OTP to register account."
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#A9a9a9"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/create_account_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"
            android:text="Number"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/create_account_number_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_cardView_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#dce53256"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/create_account_number_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:text="Send OTP"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/miss_smarty_pants"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>